name: fraud-detection-isolation-forest

conda_env: conda.yaml

entry_points:
  main:
    parameters:
      train_final:
        type: str
        default: "https://github.com/muhammadrisa1/Workflow-CI/releases/download/v1.0.0/creditcard_train_processed.csv"

      test_final:
        type: str
        default: "https://github.com/muhammadrisa1/Workflow-CI/releases/download/v1.0.0/creditcard_test_processed.csv"

      model_output:
        type: str
        default: "model"

    command: >
      python modelling.py
      --train_final={train_final}
      --test_final={test_final}
      --model_output={model_output}
